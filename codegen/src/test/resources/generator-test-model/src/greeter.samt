package tools.samt.greeter

typealias ID = String? (1..50)

record Greeting {
    message: String (0..128)
}

record Person {
    id: ID
    name: String
    age: Int (1..*)
}

enum GreetingType {
    HELLO,
    HI,
    HEY
}

service Greeter {
    greet(id: ID,
          name: String (1..50),
          type: GreetingType?
    ): Greeting
    // Nullability to verify edge-cases
    greetAll(names: List<String? (1..50)>): Map<String, Greeting?>
    greeting(who: Person): String (1..100)

    @Description("Used to test all the types")
    allTheTypes(
        long: Long,
        float: Float,
        double: Double,
        decimal: Decimal,
        boolean: Boolean,
        date: Date,
        dateTime: DateTime,
        duration: Duration
    )

    @Deprecated("Do not use anymore!")
    async legacy()
}
